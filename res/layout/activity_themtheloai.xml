<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">









    <ImageView
        android:id="@+id/imgdla"

        android:src="@drawable/pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">

    </ImageView>





    <EditText
        android:id="@+id/edttendla"
        android:textColorHint="#B68E8E"
        android:textColor="#B68E8E"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgdla"
        android:layout_marginTop="20dp"
        android:background="@drawable/edtpass"
        android:hint="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtmotadla"
        android:textColorHint="#B68E8E"
        android:textColor="#B68E8E"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/edttendla"
        android:layout_marginTop="20dp"
        android:background="@drawable/edtpass"
        android:hint="Mô tả"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtvitridla"
        android:textColorHint="#B68E8E"
        android:textColor="#B68E8E"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/edtmotadla"
        android:layout_marginTop="20dp"
        android:background="@drawable/edtpass"
        android:hint="Vị Trí"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/edtvitridla"
        android:gravity="center"

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:textColor="#B68E8E"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnADDa"
            android:text="ADD"
            android:textColor="#FFF"
            android:background="#E4FA742B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:id="@+id/btnCanceldla"
            android:text="Cancel"
            android:textColor="#FFF"
            android:background="#E4FA742B"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>


    </LinearLayout>


</RelativeLayout>