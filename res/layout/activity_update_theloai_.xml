<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bartl"
        android:layout_width="match_parent"
        android:background="#E4FA742B"
        android:layout_height="50dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tooltl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgbacktl"
                    android:src="@drawable/back1"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Update Catories"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:textSize="25sp"
                    android:layout_toRightOf="@id/imgbacktl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:id="@+id/imgup"

        android:src="@drawable/hinhad"
        android:layout_below="@id/bartl"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_width="120dp"
        android:layout_height="160dp">

    </ImageView>

    <Button
        android:id="@+id/btnChoseup"
        android:text="Choose"
        android:layout_toRightOf="@id/imgup"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>


    <EditText
        android:id="@+id/edttenup"
        android:textColorHint="#B68E8E"
        android:textColor="#B68E8E"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgup"
        android:layout_marginTop="20dp"
        android:background="@drawable/edtpass"
        android:hint="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtmotaup"
        android:textColorHint="#B68E8E"
        android:textColor="#B68E8E"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/edttenup"
        android:layout_marginTop="20dp"
        android:background="@drawable/edtpass"
        android:hint="Mô tả"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtvitriup"
        android:textColorHint="#B68E8E"
        android:textColor="#B68E8E"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/edtmotaup"
        android:layout_marginTop="20dp"
        android:background="@drawable/edtpass"
        android:hint="Vị Trí"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/edtvitriup"
        android:gravity="center"

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:textColor="#B68E8E"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnADDup"
            android:text="ADD"
            android:textColor="#FFF"
            android:background="#E4FA742B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:id="@+id/btnCancelup"
            android:text="Cancel"
            android:textColor="#FFF"
            android:background="#E4FA742B"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>


    </LinearLayout>


</RelativeLayout>