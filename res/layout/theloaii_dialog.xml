<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/txtttl"
        android:text="ADD Catories"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>


    <ImageView
        android:id="@+id/imgdl"
        android:layout_below="@id/txtttl"
        android:src="@drawable/pic"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="160dp">

    </ImageView>

    <Button
        android:id="@+id/btnChose"
        android:text="Choose"
        android:layout_toRightOf="@id/imgdl"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>



    <EditText
        android:id="@+id/edttendl"
        android:textColorHint="#B68E8E"
        android:textColor="#B68E8E"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgdl"
        android:layout_marginTop="20dp"
        android:background="@drawable/edtpass"
        android:hint="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtmotadl"
        android:textColorHint="#B68E8E"
        android:textColor="#B68E8E"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/edttendl"
        android:layout_marginTop="20dp"
        android:background="@drawable/edtpass"
        android:hint="Mô tả"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtvitridl"
        android:textColorHint="#B68E8E"
        android:textColor="#B68E8E"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/edtmotadl"
        android:layout_marginTop="20dp"
        android:background="@drawable/edtpass"
        android:hint="Vị Trí"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/edtvitridl"
        android:gravity="center"

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:textColor="#B68E8E"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnADD"
            android:text="ADD"
            android:textColor="#FFF"
            android:background="#E4FA742B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:id="@+id/btnCanceldl"
            android:text="Cancel"
            android:textColor="#FFF"
            android:background="#E4FA742B"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>


    </LinearLayout>


</RelativeLayout>